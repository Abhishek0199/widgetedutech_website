<% include ../partials/header %>

<style>
  .container {
    padding: 2vh 0 4vh 0;
  }

  .card{
    margin: 2vh 0 4vh 0;
  }
</style>

<div class="container">
  <% for(var i=0; i<vid.length; i++){%>
    <div class="card">
      <h4 class="card-title text-center text-black-50" onclick="myfunc('<%= vid[i].iframe_embed%>')" id="title"><%= vid[i].title%></h4>
      <p class="card-subtitle text-muted">Click on the title above to load the video</p>
      <div class="container text-center" id="<%= vid[i].iframe_embed %>" style="display: none">
        <%- vid[i].iframe_embed %>
      </div>
    </div>
  <%}%>
</div>

<script type="text/javascript">
function myfunc(id){
  document.getElementById(id).style.display = 'block';
}

</script>

<% include ../partials/footer %>
